# Database Configuration
DB_TYPE=mysql                    # Options: mysql, postgres, etc.
DB_HOST=127.0.0.1               # Database host (use IP format for clarity)
DB_PORT=3306                    # Standard MySQL port
DB_USERNAME=your_db_user        # Database username
DB_PASSWORD=your_db_password    # Database password
DB_NAME=your_database_name      # Database name

# Authentication Secrets (32+ characters recommended)
AT_SECRET=your_access_token_secret_32_chars_min      # Example: 8a7b6c5d4e3f2g1h...
RT_SECRET=your_refresh_token_secret_32_chars_min     # Example: 9i8h7g6f5e4d3c2b...
SESSION_SECRET=your_session_secret_32_chars_min      # Example: 1a2b3c4d5e6f7g8h...

# Frontend Configuration
FRONTEND_URL=http://localhost:5173    # Development frontend URL

# Redis Configuration
REDIS_HOST=127.0.0.1           # Redis host (use IP format for clarity)
REDIS_PORT=6379               # Standard Redis port
REDIS_TTL=3600               # Cache TTL in seconds (1 hour)